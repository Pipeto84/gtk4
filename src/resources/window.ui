<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="MyGtkAppWindow" parent="GtkApplicationWindow">
    <property name="title">My GTK App</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">4</property>    
        <child>
          <object class="MyGtkAppCustomButton" id="button1">
            <signal name="clicked" handler="handle_button1_clicked" swapped="true"/>
            <property name="label">Press me!</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">50</property>
            <property name="margin-end">50</property>  
          </object>
        </child>
        <child>
          <object class="MyGtkAppCustomButton" id="button2">
            <signal name="clicked" handler="handle_button2_clicked" swapped="true"/>
            <property name="label">Press me too!</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">50</property>
            <property name="margin-end">50</property>        
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
